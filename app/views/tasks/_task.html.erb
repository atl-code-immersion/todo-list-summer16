<div class="col-md-12">
	<div class="well">
		<h3 class="delete-link"><%= link_to task.description, task, remote: true, method: :delete, data: { confirm: 'Are you sure?' } %></h3>
		<p><%= link_to task.deadline, sdt_path(deadline: task.deadline) %></p>
		<%= link_to edit_task_path(task), remote: true do %>
			<button class="btn btn-warning">
				<i class="fa fa-pencil"></i> Edit
			</button>
		<% end %> 
  </div>
</div>
