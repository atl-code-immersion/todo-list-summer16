<div class="row">
	<div class="col-md-4">
		<%= link_to new_task_path, remote: true do %>
			<button class="btn btn-info">
				<i class="fa fa-plus-circle"></i> Add Task
			</button>
		<% end %>

		<div id="task-form" style="display: none;"></div>
	</div>
	<div class="col-md-6">
		<h2>Listing Tasks</h2>
			<div class="row">
			  <div id="tasks">
			      <%= render @tasks %>
			  </div>
			</div>
	</div>
</div>
